@model LeagueDash.Models.PlayerViewModels.PlayerDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Player Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerTeam)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Player.TeamId == null && !Model.IsOnTeam)
    {
        <form asp-action="Edit">
            <input type="hidden" asp-for="Player.Id" />
            <input type="submit" value="Add Player to Team?" class="btn btn-primary" />
        </form>
    }
    @if (Model.IsOnTeam)
    {
        <form asp-action="Edit">
            <input type="hidden" asp-for="Player.Id" />
            <input type="submit" value="Remove Player from Team?" class="btn btn-primary" />
        </form>
    }
    <a asp-action="Index">Go to All Players</a>
</div>

